{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "BotConfiguration": {
    "BotName": "Arty",
    "AadAppId": "YOUR_BOT_APP_ID",
    "AadAppSecret": "YOUR_BOT_APP_SECRET",
    
    "_comment1": "CallbackDomain = Your ngrok HTTP domain (for port 9441)",
    "CallbackDomain": "achilary-tonda-evasional.ngrok-free.dev",
    
    "_comment2": "ServiceDnsName = Your ngrok TCP domain (for port 8445)",
    "ServiceDnsName": "1.tcp.ngrok.io",
    "ServiceCname": "1.tcp.ngrok.io",
    
    "CertificateThumbprint": "YOUR_CERTIFICATE_THUMBPRINT",
    
    "_comment3": "InstancePublicPort = The TCP port from ngrok (e.g., 20000)",
    "InstancePublicPort": 20000,
    "InstanceInternalPort": 8445,
    "CallSignalingPort": 9441,
    
    "PlaceCallEndpointUrl": "https://graph.microsoft.com/v1.0",
    "GraphApiBaseUrl": "https://graph.microsoft.com/v1.0"
  },
  "AudioSettings": {
    "OutputFolder": "AudioCapture",
    "SampleRate": 16000,
    "BitsPerSample": 16,
    "Channels": 1,
    "CaptureUnmixedAudio": true
  },
  "PythonBackend": {
    "BaseUrl": "http://localhost:8000",
    "TranscriptionWebhookPath": "/api/arty/transcription",
    "StatusWebhookPath": "/api/arty/status"
  }
}

